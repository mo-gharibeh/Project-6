<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- Navbar -->
    <header>
        <nav>
            <div class="logo">
                <img src="~/images/logo.png" alt="Gharibeh Dessert Shop Logo" />
                @*<span>Gharibeh Dessert Shop</span>*@
            </div>
            <ul>
                <li><a href="@Url.Action("Home", "Categories")">Home</a></li>
                <li><a href="@Url.Action("Shop", "Products", new { id = "" })">Shop</a></li>
                <li><a href="@Url.Action("About", "Home")">About</a></li>
                @*<li><a href="@Url.Action("Basket", "Home")">Cart</a></li>*@
            </ul>
            <div class="auth-buttons">
                @if (Session["name"] == "0")
                {

                    <a href="@Url.Action("Logout", "User")" class="btn btn-login">Logout</a>
                    <a href="@Url.Action("Cart", "CartItems", new { id = Session["UserID"] })" class="btn btn-login">Cart <img src="~/images/market.png" style="width:20px; height : 20px;" /></a>



                }
                else
                {
                    <a href="@Url.Action("Login", "User")" class="btn btn-login">Login</a>
                    <a href="@Url.Action("Register", "User")" class="btn btn-register">Register</a>

                }
            </div>
           

        </nav>
    </header>

    <!-- Main Content -->
    <div>
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <div class="logo">
                <img src="~/images/logo.png" alt="Gharibeh Dessert Shop Logo" />
                @*<span>Gharibeh Dessert Shop</span>*@
            </div>
            <div class="footer-contact">
                <ul>
                    <li><a href="@Url.Action("Home", "Categories")">Home</a></li>
                    <li><a href="@Url.Action("Shop", "Products")">Shop</a></li>
                    <li><a href="@Url.Action("About", "Home")">About</a></li>
                    @*<li><a href="@Url.Action("Cart", "CartItems")">Cart</a></li>*@
                </ul>
            </div>
            <div class="footer-contact">
                <h3>Contact</h3>
                <ul>
                    <li><a href="#">Facebook</a></li>
                    <li><a href="#">Instagram</a></li>
                    <li><a href="#">WhatsApp</a></li>
                    <li><a href="#">Email</a></li>
                </ul>
            </div>
            <div class="footer-map">
                @*<img src="~/images/map.png" alt="Map" />*@

                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d53808.189083562684!2d35.84740965!3d32.55252984999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x151c76916dac0453%3A0x5416e113d81f7d82!2sIrbid!5e0!3m2!1sen!2sjo!4v1723820347080!5m2!1sen!2sjo" width="250" height="150" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
