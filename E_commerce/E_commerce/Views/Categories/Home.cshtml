@model IEnumerable<E_commerce.Models.Category>



@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_EStart.cshtml";
}

<div class="container mt-5">

    <!-- Slider Section -->
    <div id="dessertCarousel" class="carousel slide mb-5" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#dessertCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#dessertCarousel" data-slide-to="1"></li>
            <li data-target="#dessertCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/Cookies Cupcakes.jpg" class="d-block w-100" alt="Dessert 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Delicious Cheesecakes</h5>
                    <p>Try our variety of cheesecakes, from classic to exotic flavors.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/Cheesecake.jpg" class="d-block w-100" alt="Dessert 2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Sweet and Savory</h5>
                    <p>Explore our wide range of desserts that cater to every taste.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/colored sparks Donut.jpg" class="d-block w-100" alt="Dessert 3">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Handmade Goodness</h5>
                    <p>All our desserts are handmade with the finest ingredients.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#dessertCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#dessertCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- Categories Section -->
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card modern-card h-100">
                    <img src="@Url.Content("~/images/colored sparks Donut.jpg")" class="card-img-top" alt="@category.CategoryName">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center">@category.CategoryName</h5>
                        <div class="mt-auto text-center">
                            <a href="@Url.Action("Shop", "Products", new { id = category.CategoryID })" class="btn btn-primary btn-modern">Explore</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="about-section">
    <h2>About</h2>
    <p>
        Garibeh dessert is a shop<br>
        of handmade sweets<br>
        It is located in the center of Irbid<br>
        Since 2020<br>
        You can order through the website<br>
        Or by phone
    </p>
</div>


<!-- Optional: Add custom styling here -->
<style>
    .carousel-caption {
        background-color: rgba(0, 0, 0, 0.5);
        padding: 10px;
        border-radius: 10px;
    }

    .modern-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .modern-card:hover {
            transform: translateY(-10px);
        }

        .modern-card img {
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

    .btn-modern {
        border-radius: 30px;
        padding: 10px 20px;
    }

    .mb-5 {
        height: 250px !important,
    }

    .w-100 {
        width: 50%;
        height: 80vh !important;
    }
    .about-section {
        background-color: #B5A38F; /* Set background color */
        padding: 20px;
        border-radius: 15px; /* Rounded corners */
        width:75%; /* Set a width for the box */
        font-family: 'Georgia', serif; /* Font style */
        color: #2f2a24; /* Text color */
        margin: 20px auto; /* Center the section */
        text-align: left; /* Align text to the left */
    }

        .about-section h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .about-section p {
            font-size: 18px;
            line-height: 1.6;
            white-space: pre-line; /* Maintain line breaks */
            text-align: center;
        }

</style>

<!-- Add this script reference if not already included -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" crossorigin="anonymous"></script>
}







